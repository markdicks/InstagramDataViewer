@page "/"

<PageTitle>Home</PageTitle>

<div class="container">
    <div class="hero-section">
        <h1>Welcome to the Instagram Data Viewer</h1>
        <p>Analyze and track your Instagram account with powerful insights.</p>
        <NavLink href="/dashboard" class="btn-primary">Go to Dashboard</NavLink>
    </div>

    <div class="stats-overview">
        <div class="card">
            <div class="card-header">Total Posts</div>
            <div class="card-body">1,250</div>
        </div>
        <div class="card">
            <div class="card-header">Followers</div>
            <div class="card-body">18,750</div>
        </div>
        <div class="card">
            <div class="card-header">Following</div>
            <div class="card-body">325</div>
        </div>
    </div>

    <div class="recent-posts">
        <h2>Recent Posts</h2>
        <div class="post">
            <img src="https://via.placeholder.com/150" alt="Post Image" />
            <div class="post-info">
                <p><strong>Likes:</strong> 1,200</p>
                <p><strong>Comments:</strong> 230</p>
            </div>
        </div>
        <div class="post">
            <img src="https://via.placeholder.com/150" alt="Post Image" />
            <div class="post-info">
                <p><strong>Likes:</strong> 980</p>
                <p><strong>Comments:</strong> 175</p>
            </div>
        </div>
    </div>
</div>
